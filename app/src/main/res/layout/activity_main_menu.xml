<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.imagine.azureeepc.imaginecup.MainMenu">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/select_background1">


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="0dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Compagnship"
            android:textColor="#fff4fffd"
            android:id="@+id/compagnship"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_border"
            android:onClick="compagnshipClickHandler"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="0dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reparation"
            android:textColor="#fff4fffd"
            android:id="@+id/reparation"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_border"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="0dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Urgent"
            android:textColor="#fff4fffd"
            android:id="@+id/urgent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_border"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="0dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Volunteer"
            android:textColor="#fff4fffd"
            android:id="@+id/volunter"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_border"
            android:elegantTextHeight="false" />


    </LinearLayout>

</RelativeLayout>
